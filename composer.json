{
    "name": "fgtclb/academic-extensions",
    "description": "Centralized mono repository for academic extension development",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Stefan BÃ¼rk",
            "email": "stefan@buerk.tech"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3 || ^8.4",
        "fgtclb/academics-monorepo-shared": "@dev"
    },
    "config": {
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true,
            "php-http/discovery": true
        },
        "sort-packages": true,
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "typo3/cms": {
            "web-dir": ".Build/Web",
            "app-dir": ".Build"
        }
    },
    "require-dev": {
        "bnf/phpstan-psr-container": "^1.0.1",
        "friendsofphp/php-cs-fixer": "^3.57.1",
        "friendsoftypo3/phpstan-typo3": "^0.9.0",
        "phpstan/phpdoc-parser": "^1.29.0",
        "phpstan/phpstan": "^1.12.21",
        "phpstan/phpstan-phpunit": "^1.4.0",
        "phpunit/phpunit": "^10.5.45",
        "typo3/testing-framework": "^7.1.1"
    },
    "repositories": {
        "packages-dev": {
            "type": "path",
            "url": "packages-dev/*"
        },
        "packages": {
            "type": "path",
            "url": "packages/*/*"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "FGTCLB\\AcademicBiteJobs\\Tests\\": "packages/academic-bite-jobs/Tests",
            "FGTCLB\\AcademicJobs\\Tests\\": "packages/academic-jobs/Tests",
            "FGTCLB\\AcademicPartners\\Tests\\": "packages/academic-partners/Tests",
            "FGTCLB\\AcademicPersonsEdit\\Tests\\": "packages/academic-persons-edit/Tests",
            "FGTCLB\\AcademicProjects\\Tests\\": "packages/academic-programs/Tests",
            "Fgtclb\\AcademicPersons\\Tests\\": "packages/academic-persons/Tests",
            "Fgtclb\\AcademicPersonsEdit\\Tests\\": "packages/academic-persons-edit/Tests"
        }
    }
}
