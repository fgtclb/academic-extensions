{
    "name": "fgtclb/academic-extensions",
    "description": "Centralized mono repository for academic extension development",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Stefan BÃ¼rk",
            "email": "stefan@buerk.tech"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3 || ^8.4",
        "typo3/cms-core": "^11.5 || ^12.4"
    },
    "config": {
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true,
            "php-http/discovery": true
        },
        "sort-packages": true,
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "typo3/cms": {
            "web-dir": ".Build/Web",
            "app-dir": ".Build"
        }
    },
    "require-dev": {
        "bnf/phpstan-psr-container": "^1.0.1",
        "fgtclb/academic-bite-jobs": "@dev",
        "fgtclb/academic-contacts4pages": "@dev",
        "fgtclb/academic-jobs": "@dev",
        "fgtclb/academic-partners": "@dev",
        "fgtclb/academic-persons": "@dev",
        "fgtclb/academic-persons-edit": "@dev",
        "fgtclb/academic-persons-sync": "@dev",
        "fgtclb/academic-programs": "@dev",
        "fgtclb/academic-projects": "@dev",
        "fgtclb/category-types": "@dev",
        "friendsofphp/php-cs-fixer": "^3.57.1",
        "friendsoftypo3/phpstan-typo3": "^0.9.0",
        "phpstan/phpdoc-parser": "^1.29.0",
        "phpstan/phpstan": "^1.12.21",
        "phpstan/phpstan-phpunit": "^1.4.0",
        "phpunit/phpunit": "^10.5.45",
        "typo3/cms-backend": "^11.5 || ^12.4",
        "typo3/cms-belog": "^11.5 || ^12.4",
        "typo3/cms-beuser": "^11.5 || ^12.4",
        "typo3/cms-composer-installers": "v4.0.0-RC2 || ^5",
        "typo3/cms-extbase": "^11.5 || ^12.4",
        "typo3/cms-extensionmanager": "^11.5 || ^12.4",
        "typo3/cms-felogin": "^11.5 || ^12.4",
        "typo3/cms-filelist": "^11.5 || ^12.4",
        "typo3/cms-fluid": "^11.5 || ^12.4",
        "typo3/cms-fluid-styled-content": "^11.5 || ^12.4",
        "typo3/cms-frontend": "^11.5 || ^12.4",
        "typo3/cms-info": "^11.5 || ^12.4",
        "typo3/cms-install": "^11.5 || ^12.4",
        "typo3/cms-recycler": "^11.5 || ^12.4",
        "typo3/cms-redirects": "^11.5 || ^12.4",
        "typo3/cms-reports": "^11.5 || ^12.4",
        "typo3/cms-rte-ckeditor": "^11.5 || ^12.4",
        "typo3/cms-setup": "^11.5 || ^12.4",
        "typo3/cms-sys-note": "^11.5 || ^12.4",
        "typo3/cms-tstemplate": "^11.5 || ^12.4",
        "typo3/cms-workspaces": "^11.5 || ^12.4",
        "typo3/testing-framework": "^7.1.1"
    },
    "repositories": {
        "packages": {
            "type": "path",
            "url": "packages/*/*"
        }
    }
}
