{
    "name": "fgtclb/academic-extensions-core-12",
    "description": "Centralized mono repository for academic extension development",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "FGTCLB GmbH",
            "email": "hello@fgtclb.com"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3 || ^8.4",
        "bk2k/bootstrap-package": "^15.0@dev",
        "fgtclb/academics-monorepo-shared": "2.1.*@dev",
        "typo3/minimal": "^12"
    },
    "config": {
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true,
            "php-http/discovery": true,
            "sbuerk/fixture-packages": true
        },
        "sort-packages": true,
        "audit": {
            "block-insecure": false
        }
    },
    "extra": {
        "typo3/cms": {
            "web-dir": "public"
        }
    },
    "require-dev": {
        "bnf/phpstan-psr-container": "^1.0.1",
        "friendsofphp/php-cs-fixer": "^3.57.1",
        "friendsoftypo3/phpstan-typo3": "^0.9.0",
        "georgringer/numbered-pagination": "^2.1",
        "phpstan/phpdoc-parser": "^1.29.0",
        "phpstan/phpstan": "^1.12.21",
        "phpstan/phpstan-phpunit": "^1.4.0",
        "phpunit/phpunit": "^10.5.45",
        "sbuerk/fixture-packages": ">=0.1.1 < 2.0.0",
        "typo3/tailor": "^1.6",
        "typo3/testing-framework": "^8.2.7"
    },
    "repositories": {
        "packages-dev": {
            "type": "path",
            "url": "../packages-dev/*",
            "options": {
                "versions": {
                    "fgtclb/academics-monorepo-shared": "2.1.3-dev"
                }
            }
        },
        "packages": {
            "type": "path",
            "url": "../packages/*/*",
            "options": {
                "versions": {
                    "fgtclb/academic-bite-jobs": "2.1.3-dev",
                    "fgtclb/academic-contacts4pages": "2.1.3-dev",
                    "fgtclb/academic-jobs": "2.1.3-dev",
                    "fgtclb/academic-partners": "2.1.3-dev",
                    "fgtclb/academic-persons": "2.1.3-dev",
                    "fgtclb/academic-persons-edit": "2.1.3-dev",
                    "fgtclb/academic-persons-sync": "2.1.3-dev",
                    "fgtclb/academic-programs": "2.1.3-dev",
                    "fgtclb/academic-projects": "2.1.3-dev",
                    "fgtclb/category-types": "2.1.3-dev",
                    "fgtclb/academic-base": "2.1.3-dev",
                    "fgtclb/academic-study-plan": "2.1.3-dev"
                }
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/fgtclb/academic-extensions/issues",
        "source": "https://github.com/fgtclb/academic-extensions",
        "email": "hello@fgtclb.com"
    },
    "homepage": "https://www.fgtclb.com/",
    "autoload": {
        "psr-4": {
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms-core/Tests/",
            "TYPO3\\CMS\\Extbase\\Tests\\": ".Build/vendor/typo3/cms-extbase/Tests/",
            "TYPO3\\CMS\\Frontend\\Tests\\": ".Build/vendor/typo3/cms-frontend/Tests/"
        }
    }
}
